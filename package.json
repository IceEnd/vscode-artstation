{
  "name": "artstation",
  "displayName": "artstation",
  "description": "artstation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:artstation.artstationLogin",
    "onCommand:artstation.artstation"
  ],
  "main": "./dist/extension.js",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/IceEnd/vscode-artstation.git"
  },
  "publisher": "Alchemy",
  "contributes": {
    "commands": [
      {
        "command": "artstation.artstationLogin",
        "title": "Artstation Login",
        "category": "artstation"
      },
      {
        "command": "artstation.artstation",
        "title": "Artstation Start",
        "category": "artstation"
      }
    ],
    "configuration": {
      "title": "Artstation",
      "properties": {
        "artstation.wallpaperPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Wallpaper save path.\n\n壁纸保存路径"
        }
      }
    }
  },
  "scripts": {
    "prewatch": "yarn run less",
    "precompile": "yarn run less",
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch --mode development",
    "package": "webpack --mode production --devtool hidden-source-map && yarn run less",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "less": "lessc ./template/styles/index.less ./template/styles.css -x",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "less": "^4.1.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "vsce": "^2.11.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "dayjs": "^1.11.5",
    "wallpaper": "^6.1.1"
  }
}
